{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "sourceMap": true,
    "jsx": "react",
    "outDir": "./docs",
    "esModuleInterop": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "paths": {
      "src": ["src/*"],
      "components": ["src/components"],
      "pages/*": ["src/pages/*"],
      "styles/*": ["src/styles/*"],
    }
  },
  "include": [
    "src/index.tsx",
  ],
  "exclude": [
    "node_modules",
    "docs",
    "webpack.config.js",
    "postcss.config.js"
  ]
}