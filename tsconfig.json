{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "sourceMap": true,
    "jsx": "react",
    "outDir": "./docs",
    "esModuleInterop": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "paths": {
      "components": ["src/components"],
      "@pages": ["src/pages"],
      "styles/*": ["src/resources/styles/*"],
      "store/*": ["src/store/*"],
    }
  },
  "include": [
    "src/index.tsx",
  ],
  "exclude": [
    "node_modules",
    "docs",
    "webpack.config.js",
    "postcss.config.js"
  ]
}